{
  "name": "helm-guard",
  "version": "0.1.0",
  "description": "CLI guardrail to validate Helm manifests against live OpenShift resources",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "helm-guard": "dist/index.js"
  },
  "scripts": {
    "prebuild": "npm --prefix ../shared run build -- --force",
    "build": "tsc -b",
    "dev": "tsx src/index.ts"
  },
  "dependencies": {
    "@helm-guard/shared": "file:../shared",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "deep-diff": "^1.0.2",
    "minimatch": "^9.0.3",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/deep-diff": "^1.0.5",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  }
}

